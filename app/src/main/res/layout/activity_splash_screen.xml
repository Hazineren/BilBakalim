<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/bilbakalim_logos_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/splashActivity_progressBar"
        android:min="0"
        android:max="100"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></ProgressBar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splasActivity_txtViewState"
        android:text="Durum"
        android:textColor="@color/renk"
        android:textSize="17sp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="@+id/splashActivity_progressBar"
        app:layout_constraintStart_toStartOf="@+id/splashActivity_progressBar"
        app:layout_constraintTop_toBottomOf="@id/splashActivity_progressBar"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>