<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_round_bg"
    android:padding="7dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/custom_dialog_shop_item_txtViewItemTitle"
        android:textColor="@color/white"
        android:text="3 Adet Can"
        android:textStyle="bold"
        android:textSize="16sp"
        ></TextView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/custom_dialog_shop_item_imgViewItemImg"
        android:scaleType="fitXY"
        android:layout_marginRight="7dp"></ImageView>

    <Button
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:id="@+id/custom_dialog_shop_item_btnItemPrice"
        android:text="0,99 TL"
        android:background="@drawable/btn_round_bg_2"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        ></Button>

</LinearLayout>